###############################################
# Klerno Labs - Example Environment
# Copy to .env and customize for your environment. Do NOT commit real secrets.
###############################################

# App/runtime
APP_ENV=dev
PORT=8000
WORKERS=1
DEMO_MODE=true
DEBUG=true

# Secrets (change in production!)
JWT_SECRET=change-me-please-32+chars
ACCESS_TOKEN_EXPIRE_MINUTES=60
PASSWORD_PEPPER=change-me-please-32+chars

# Admin bootstrap (optional for local dev)
ADMIN_EMAIL=admin@klerno.dev
BOOTSTRAP_ADMIN_EMAIL=admin@klerno.dev
BOOTSTRAP_ADMIN_PASSWORD=ChangeMe123!

# Cookies/session
SESSION_COOKIE_NAME=session
COOKIE_SECURE=auto   # auto|true|false
COOKIE_SAMESITE=lax  # lax|strict|none
ENABLE_HSTS=true

# API access
API_KEY=dev-api-key
X_API_KEY=
RISK_THRESHOLD=0.75

# Database
DATABASE_URL=sqlite:///./data/klerno.db
DB_PATH=./data/klerno.db
USE_SQLITE=true
SQLITE_PATH=./data/klerno.db

# XRPL / Integrations
XRPL_NET=testnet
XRPL_RPC_URL=https://s2.ripple.com:51234
DESTINATION_WALLET=rPT1Sjq2YGrBMTttX4GZHjKu9dyfzbpAYe
SUB_PRICE_XRP=10
SUB_DURATION_DAYS=30
BSC_API_KEY=

# Email / Notifications
SENDGRID_API_KEY=
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=you@example.com
SENDGRID_FROM=alerts@example.com
SENDGRID_NAME=Klerno Labs
SLACK_WEBHOOK_URL=

# Paywall / Stripe (optional)
PAYWALL_CODE=Labs2025
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID=
STRIPE_WEBHOOK_SECRET=

# OpenAI (optional features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

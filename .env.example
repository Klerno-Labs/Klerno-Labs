# ============================
# Klerno Labs - Production Environment Configuration
# Copy this file to .env and fill in your production values
# ============================

# ============================
# Core Application Settings
# ============================
APP_ENV=production
APP_NAME="Klerno Labs Enterprise"
APP_VERSION=1.0.0
DEBUG=false
PORT=8000
HOST=0.0.0.0
WORKERS=4

# ============================
# Security Configuration
# ============================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_chars_long
SECRET_KEY=your_application_secret_key_for_sessions_32_chars_min
ACCESS_TOKEN_EXPIRE_MINUTES=60
PASSWORD_PEPPER=your_password_pepper_32_chars_minimum

# API Security
API_KEY=your_production_api_key_here
X_API_KEY=your_x_api_key_here
RATE_LIMIT_PER_MINUTE=100
CORS_ORIGINS=["https://yourdomain.com"]
RISK_THRESHOLD=0.75

# ============================
# Database Configuration
# ============================
DATABASE_URL=sqlite:///./data/klerno.db
DB_PATH=./data/klerno.db
USE_SQLITE=true
SQLITE_PATH=./data/klerno.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================
# Cache & Performance
# ============================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false
MEMCACHED_SERVERS=["localhost:11211"]
MEMCACHED_ENABLED=false

# Cache TTL Settings (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# ============================
# Blockchain Integration
# ============================
XRPL_NET=mainnet
XRPL_RPC_URL=https://xrplcluster.com
DESTINATION_WALLET=rYourProductionWalletAddress
SUB_PRICE_XRP=10
SUB_DURATION_DAYS=30
BSC_API_KEY=your_bsc_api_key

# Ethereum
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id

# ============================
# Email & Notifications
# ============================
SENDGRID_API_KEY=your_sendgrid_api_key
ALERT_EMAIL_FROM=alerts@klerno.com
ALERT_EMAIL_TO=admin@klerno.com
SENDGRID_FROM=noreply@klerno.com
SENDGRID_NAME=Klerno Labs
SLACK_WEBHOOK_URL=your_slack_webhook_url

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Paywall / Stripe (optional)
PAYWALL_CODE=Labs2025
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID=
STRIPE_WEBHOOK_SECRET=

# OpenAI (optional features)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

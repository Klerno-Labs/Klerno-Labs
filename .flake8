[flake8]
max-line-length = 88
select = E,W,F
ignore = 
    E203,  # whitespace before :
    E501,  # line too long
    W503,  # line break before binary operator
    E402,  # module level import not at top
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    node_modules
per-file-ignores =
    __init__.py:F401
    */migrations/*:E501,F401
    */tests/*:E501,F401

[flake8]
max-line-length = 150
extend-ignore = E203, W503, E402, E303
per-file-ignores =
    tests/*: D
exclude =
    .venv,
    .venv-py311,
    .venv_p311,
    .venv_*,
    venv,
    env,
    ENV,
    .venv/**/Lib/**,
    .venv/**/Lib/site-packages/**,
    .venv-py311/**/Lib/site-packages/**,
    **/site-packages/**,
    **/Lib/site-packages/**
